<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#383852"
    tools:context="com.alxndr003.myapplication.Welcome">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/user"
        android:layout_marginTop="130dp"
        android:layout_centerHorizontal="true" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/color2"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="#eeeeee"
        android:layout_below="@+id/fab2"
        android:layout_marginLeft="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/msg"/>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/color4"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="#eeeeee"
        android:layout_below="@+id/fab3"
        android:src="@drawable/position"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/color1"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="#eeeeee"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/video"
        />
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/color3"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="#eeeeee"
        android:layout_marginRight="80dp"
        android:layout_alignTop="@+id/fab2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/photo"/>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_colorNormal="@color/colorPrimaryDark"
        fab:fab_colorPressed="@color/colorAccent"
        fab:fab_colorRipple="#eeeeee"
        android:layout_centerHorizontal="true"
        android:src="@drawable/status"/>


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Coloristic"
    android:textColor="#ffffff"
    android:textSize="20dp"
        android:id="@+id/titre"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a description of This is a description of thThis is a description of th the boring ass app Coloristic"
        android:layout_below="@id/titre"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:textColor="#aeaeae"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView" />

    <Button
     android:layout_width="150dp"
     android:layout_height="60dp"
     android:text="Sing up"
     android:background="@color/colorPrimaryDark"
     android:textColor="#ffffff"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true"
     android:layout_marginLeft="25dp"
     android:layout_marginStart="25dp"
     android:id="@+id/button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:text="Login"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignBottom="@+id/button" />

    <View android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"/>

</RelativeLayout>
